    def right_door_disp(self):
         
        mylcd = I2C_LCD_driver.lcd()
        mylcd.lcd_display_string("Notification: ",1,0)
        mylcd.lcd_display_string("The door status",2,0)
        mylcd.lcd_display_string("was changed.",3,0)
        sleep(1.5)
        mylcd.lcd_clear()
        self.check_value()
    
